<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bookshelf">


    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/gmbrlogi"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/qmark" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logical Quiz"
            android:background="#FFFF"
            android:gravity="center"
            android:textSize="30dp"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_below="@id/layout">

        <ImageButton
            android:id="@+id/gmbrmemo"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/shortterm"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Memory Quiz"
            android:background="#FFFF"
            android:gravity="center"
            android:textSize="30dp"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

</RelativeLayout>